{
  "name": "@arc/platform-browser",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Browser platform implementation for Arc (fetch-based HTTP)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./http/*.js": {
      "types": "./dist/http/*.d.ts",
      "import": "./dist/http/*.js",
      "default": "./dist/http/*.js"
    },
    "./database/*.js": {
      "types": "./dist/database/*.d.ts",
      "import": "./dist/database/*.js",
      "default": "./dist/database/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@arc/core": "workspace:*",
    "sql.js": "^1.11.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/sql.js": "^1.4.9",
    "typescript": "^5.9.2"
  }
}
