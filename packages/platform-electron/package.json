{
  "name": "@arc/platform-electron",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Electron platform implementation for Arc",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./database/*.js": {
      "types": "./dist/database/*.d.ts",
      "import": "./dist/database/*.js",
      "default": "./dist/database/*.js"
    },
    "./http/*.js": {
      "types": "./dist/http/*.d.ts",
      "import": "./dist/http/*.js",
      "default": "./dist/http/*.js"
    },
    "./filesystem/*.js": {
      "types": "./dist/filesystem/*.d.ts",
      "import": "./dist/filesystem/*.js",
      "default": "./dist/filesystem/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@arc/core": "workspace:*",
    "better-sqlite3": "^11.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20",
    "typescript": "^5.9.2"
  }
}
