{
  "name": "@arc/core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Headless TypeScript core for Arc chat application",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./domain/*.js": {
      "types": "./dist/domain/*.d.ts",
      "import": "./dist/domain/*.js",
      "default": "./dist/domain/*.js"
    },
    "./platform/*.js": {
      "types": "./dist/platform/*.d.ts",
      "import": "./dist/platform/*.js",
      "default": "./dist/platform/*.js"
    },
    "./repositories/*.js": {
      "types": "./dist/repositories/*.d.ts",
      "import": "./dist/repositories/*.js",
      "default": "./dist/repositories/*.js"
    },
    "./services/*.js": {
      "types": "./dist/services/*.d.ts",
      "import": "./dist/services/*.js",
      "default": "./dist/services/*.js"
    },
    "./utils/*.js": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js",
      "default": "./dist/utils/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@arc/contracts": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
