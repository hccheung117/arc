{
  "name": "@arc/core",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "description": "Headless TypeScript core for Arc chat application",
  "main": "./dist/core.js",
  "types": "./dist/core.d.ts",
  "exports": {
    "./core.js": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "default": "./dist/core.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "dependencies": {
    "@arc/ai": "workspace:*",
    "@arc/db": "workspace:*",
    "@arc/platform": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
