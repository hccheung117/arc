{
  "name": "@arc/contracts",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "description": "Shared interfaces and contracts for Arc packages",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./*.js": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    },
    "./ai/*.js": {
      "types": "./dist/ai/*.d.ts",
      "import": "./dist/ai/*.js",
      "default": "./dist/ai/*.js"
    },
    "./ai/*/*.js": {
      "types": "./dist/ai/*/*.d.ts",
      "import": "./dist/ai/*/*.js",
      "default": "./dist/ai/*/*.js"
    },
    "./platform/*.js": {
      "types": "./dist/platform/*.d.ts",
      "import": "./dist/platform/*.js",
      "default": "./dist/platform/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5.9.2"
  }
}
