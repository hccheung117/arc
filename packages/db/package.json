{
  "name": "@arc/db",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "description": "SQLite schema, migrations, and database wrapper for Arc",
  "main": "./dist/database.js",
  "types": "./dist/database.d.ts",
  "exports": {
    "./database.js": {
      "types": "./dist/database.d.ts",
      "import": "./dist/database.js",
      "default": "./dist/database.js"
    },
    "./schema.js": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js",
      "default": "./dist/schema.js"
    },
    "./db-errors.js": {
      "types": "./dist/db-errors.d.ts",
      "import": "./dist/db-errors.js",
      "default": "./dist/db-errors.js"
    },
    "./migrations/*.js": {
      "types": "./dist/migrations/*.d.ts",
      "import": "./dist/migrations/*.js",
      "default": "./dist/migrations/*.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@arc/platform": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^15.11.7",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
