{
  "name": "@arc/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "SQLite schema, migrations, and repository implementations for Arc",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./migrations/*.js": {
      "types": "./dist/migrations/*.d.ts",
      "import": "./dist/migrations/*.js",
      "default": "./dist/migrations/*.js"
    },
    "./repositories/*.js": {
      "types": "./dist/repositories/*.d.ts",
      "import": "./dist/repositories/*.js",
      "default": "./dist/repositories/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@arc/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5.9.2"
  }
}
